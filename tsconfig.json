{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ng-datagrid": [
        "dist/ng-datagrid",
        "projects/ng-datagrid/src/public-api.ts"
      ],
      "ng-datagrid/*": [
        "dist/ng-datagrid/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
